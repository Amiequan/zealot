- content_for :title do
  = t('.title')

- content_for :section_title do
  = t('.title')

- content_for :section_rightpanel do
  a.btn.btn-success href="#{new_admin_user_path}"
    i.icon.far.fa-plus-square
    = t('.new_user')

.row
  .col-md-12
    .card
      .card-body.p-0
        table.table.table-bottom-borderless
          thead
            tr
              th = t('.nickname')
              th.d-none.d-sm-table-cell = t('.email')
              th = t('.role')
              th = t('.status')
              th.d-none.d-sm-table-cell = t('.last_login_time')
              th.d-none.d-sm-table-cell style="width: 80px" = t('.action')
          tbody
            - @users.each_with_index do |user, i|
              tr
                td
                  = link_to user.username, edit_admin_user_path(user)
                td.d-none.d-sm-table-cell
                  = user.email
                td
                  = user.role_name
                td
                  - if user.access_locked?
                    span.badge.text-bg-danger = t('.locked')
                  - elsif user.confirmed_at
                    span.badge.text-bg-secondary = t('.activated')
                  - else
                    = link_to t('.inactive'), edit_admin_user_path(user), class: 'badge text-bg-primary'

                td.d-none.d-sm-table-cell
                  - if user.last_sign_in_at
                    = time_ago_in_words(user.last_sign_in_at)
                  - else
                    = t('.never_logged_in')
                td.d-none.d-sm-table-cell
                  - if default_admin_in_demo_mode?(current_user)
                    button.btn.text-danger.p-0
                      i.fas.fa-trash-alt
                  - else
                    = button_link_to '', admin_user_path(user), 'trash-alt', class: 'btn text-danger p-0', \
                      data: { turbo_method: :delete, turbo_confirm: t('.destroy_user_confirm', user: user.username) }


